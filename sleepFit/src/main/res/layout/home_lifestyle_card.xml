<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="5dp" >
	
	    <ImageView
	        android:id="@+id/lifestyle_card_image"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginStart="5dp"
	        android:layout_marginTop="5dp"
	        android:src="@drawable/ic_coffee" />
	
	    <TextView
	        android:id="@+id/lifestyle_card_type_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="30dp"
	        android:layout_marginStart="30dp"
	        android:layout_marginTop="5dp"
	        android:layout_toEndOf="@id/lifestyle_card_image"
	        android:layout_toRightOf="@+id/lifestyle_card_image"
	        android:fontFamily="sans-serif-condensed"
	        android:text="dsdfsdf"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@android:color/black"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:typeface="normal" />

	    <TextView
	        android:id="@+id/lifestyle_card_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/lifestyle_card_type_name"
	        android:layout_alignParentEnd="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:fontFamily="sans-serif-condensed"
	        android:gravity="end"
	        android:text="Dec 1, 2014 18:23"
	        android:textSize="14sp"
	        android:typeface="sans" />
	
        <TextView
            android:id="@+id/lifestyle_card_selection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lifestyle_card_type_name"
            android:layout_alignStart="@id/lifestyle_card_type_name"
            android:layout_below="@+id/lifestyle_card_type_name"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black" />
        
	    <TextView
	        android:id="@+id/lifestyle_card_note_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lifestyle_card_image"
	        android:layout_marginLeft="5dp"
	        android:layout_marginStart="5dp"
	        android:layout_marginTop="5dp"
	        android:fontFamily="sans-serif-condensed"
	        android:text="Note:"
	        android:textColor="@android:color/black"
	        android:textSize="14sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/lifestyle_card_note"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/lifestyle_card_image"
	        android:layout_alignStart="@id/lifestyle_card_image"
	        android:layout_below="@+id/lifestyle_card_note_title"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="3dp" />
	
	</RelativeLayout>

</android.support.v7.widget.CardView>
